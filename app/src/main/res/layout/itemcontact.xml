<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/contactdialogborder">

    <EditText
        android:id="@+id/nomeContattoText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:hint="Nome"
        android:textSize="20sp">


    </EditText>

    <EditText
        android:id="@+id/cognomeContattoText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:hint="Cognome"
        android:textSize="20sp"/>
    <EditText
        android:id="@+id/cellulareText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:inputType="number"
        android:textColor="@color/black"
        android:hint="Numero di cellulare"
        android:maxLength="10"
        android:textSize="20sp"/>
    <EditText
        android:id="@+id/emailContattoText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:hint="E-mail"
        android:textSize="20sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/aggContattoButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        android:text="Aggiungi Contatto"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:background="@drawable/button_add_contact">

    </androidx.appcompat.widget.AppCompatButton>



</LinearLayout>